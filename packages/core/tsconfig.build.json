{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"target": "ES2023",
		"lib": ["ES2023"],
		"module": "ESNext",
		"moduleResolution": "Bundler",

		"strict": true,
		"skipLibCheck": true,

		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"rootDir": "./src",
		"declarationDir": "./types"
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"]
}
