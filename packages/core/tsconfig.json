{
	"compilerOptions": {
		"target": "ES2023",
		"lib": ["ES2023"],
		"module": "ESNext",
		"moduleResolution": "Bundler",

		"strict": true,
		"skipLibCheck": true,

		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["dist", "types", "node_modules"]
}
